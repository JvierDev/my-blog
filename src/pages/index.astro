---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("posts");

export const prerender = true;
---

<Layout title="Dev Books, libros para programadores">
  <main>
    <h1 class="text-center text-7xl font-extrabold mb-24">
      Dev üíª
      <span class="block">Blog</span>
    </h1>

    <section aria-label="Libros recomendados para programadores">
      <div class="px-4 mx-auto max-w-screen-xl">
        <div class="grid gap-6 md:grid-cols-2">
          {
            posts.map((post: any) => {
              const { slug, data } = post;
              const { title, author, image, description, pubDate } = data;
              const { url, alt } = image;

              return (
                <article class="flex">
                  <a
                    href={`/post/${slug}`}
                    class="mb-2 xl:mb-0 transition hover:scale-110"
                  >
                    <img
                      transition:name={`img-${slug}`}
                      class="mr-5 w-48 rounded"
                      src={`/${url}`}
                      alt={alt}
                    />
                  </a>

                  <div class="flex flex-col justify-center">
                    <h2
                      transition:name={`title-${slug}`}
                      class="mb-2 ml-3 text-2xl font-bold leading-tight text-white"
                    >
                      <a
                        href={`/post/${slug}`}
                        class="mb-2 xl:mb-0 transition hover:scale-110"
                      >
                        {title}
                      </a>
                    </h2>

                    <p class="mb-4 ml-3 text-gray-300 max-w-sm">
                      {description}
                    </p>
                    <span class="text-xs ml-3">üóìÔ∏è Posted {pubDate}</span>
                  </div>
                </article>
              );
            })
          }
        </div>
      </div>
    </section>
  </main>
</Layout>
